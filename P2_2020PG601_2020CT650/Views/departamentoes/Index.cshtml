@model IEnumerable<P2_2020PG601_2020CT650.Models.departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Administrar departamentos</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombreDepartamento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombreDepartamento)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.departamentoId">Edit</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.departamentoId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.departamentoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
